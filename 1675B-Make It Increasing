#include<bits/stdc++.h>
#define ll long long int
using namespace std;

void solution()
{
    int count =0;
    ll n;
    cin>>n;
    ll nums[n],i;
     for ( i=0; i<n;i++)
     {
         cin>>nums[i];
     }

     for(i=n-2; i>=0; i--)
     {
         if(nums[i+1]==0)
         {
             cout<<"-1"<<endl;
             return;
         }
         while(nums[i]>=nums[i+1])
         {
             count++;
             nums[i]=(nums[i]/2);
         }

     }
     cout<<count<<endl;
}

int main()
{
    int cases;
    cin>>cases;
    while(cases--)
    {
        solution();

    }

    return 0;
}
